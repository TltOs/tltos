# remove from airootfs!
[Trigger]
Operation = Install
Type = Package
Target = irqbalance

[Action]
Description = Enabling Performance Tweaking Services ...
When = PostTransaction
Depends = sh
Depends = ananicy
Depends = preload
Depends = irqbalance
Depends = haveged
Depends = uresourced
Exec = /bin/sh -c "systemctl enable irqbalance ananicy preload haveged avahi-daemon uresourced ufw && flatpak remote-add --if-not-exists --user flathub https://dl.flathub.org/repo/flathub.flatpakrepo"
