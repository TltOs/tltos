#!/bin/bash
#!/bin/sh -eu

flags=$(cat /proc/cpuinfo | grep flags | head -n 1 | cut -d: -f2)
supports_v2='awk "/cx16/&&/lahf/&&/popcnt/&&/sse4_1/&&/sse4_2/&&/ssse3/ {found=1} END {exit !found}"'
supports_v3='awk "/avx/&&/avx2/&&/bmi1/&&/bmi2/&&/f16c/&&/fma/&&/abm/&&/movbe/&&/xsave/ {found=1} END {exit !found}"'

echo "$flags" | eval $supports_v2 || exit 2 && echo "CPU supports x86-64-v2" && echo "Installing Xanmod v2" && sudo pacman -S --noconfirm --needed linux-xanmod-clang-v2 linux-xanmod-clang-v2-headers clang lld && echo "Removing Xanmod" && sudo pacman -Rns --noconfirm linux-xanmod linux-xanmod-headers && echo "Please Reboot to the new kernel"
echo "$flags" | eval $supports_v3 || exit 3 && echo "CPU supports x86-64-v3" && echo "Installing Xanmod v3" && sudo pacman -S --noconfirm --needed linux-xanmod-clang-v3 linux-xanmod-clang-v3-headers clang lld && echo "Removing Xanmod" && sudo pacman -Rns --noconfirm linux-xanmod linux-xanmod-headers && echo "Please Reboot to the new kernel"
